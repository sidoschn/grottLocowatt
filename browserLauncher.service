[Unit]
Description=Call the browser launcher on startup
After=network.target

[Service]
Type=simple
ExecStart=startx /usr/bin/chromium http://127.0.0.1/solar-board/0 --kiosk --window-size=720,1280 --window-position=0,0 --no-first-run --noerrdialogs
User=admin
Restart=on-failure

[Install]
WantedBy=multi-user.target